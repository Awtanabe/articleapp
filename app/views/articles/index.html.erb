<p id="notice"><%= notice %></p>

<h3>カテゴリー一覧</h3>
<div class="continer">
  <div class="left">
    <ul>
      <%@categories.each do |category|%>
        <li><%=link_to "#{category.name}: #{category.articles.count}", "/categories/#{category.id}"%></li>
        <ul>
          <%category.child_categories.each do |cc|%>
          <li><%=cc.name %></li>
          <%end%>
        </ul>
      <%end%>
    </ul>
  </div>
  <div class="right">
  <h1>Articles</h1>

  <%= link_to '記事を作成', new_article_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.user_id %></td>
        <td><%= article.category_names %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>


<br>
