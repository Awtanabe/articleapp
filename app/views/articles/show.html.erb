<h2>コメント</h2>
<% @article.comments.each do |comment| %>
  <p>
    <%= comment.commenter %>: <%= comment.body %>
    <%= link_to '削除', [comment.article, comment],
                :confirm => 'よろしいですか？',
                :method => :delete %>

  </p>
<% end %>

<h2>コメントを書く</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
